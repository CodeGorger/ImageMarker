<UserControl x:Class="ImageMarker.FindableEntity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageMarker"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <!--<RowDefinition />-->
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0">Alias</Label>
            <Label Grid.Column="0" Grid.Row="1">Circle</Label>
            <!--<Label Grid.Column="0" Grid.Row="2">Obstructed</Label>-->
            <ComboBox Grid.Column="1" Grid.Row="0" Name="ComboBoxAlias" />
            <TextBlock Grid.Column="1" Grid.Row="1" Name="TextBlockCircle" Text="{Binding CircleLocation}" />
            <!--<CheckBox Grid.Column="1" Grid.Row="2" Name="CheckboxObstructed" VerticalAlignment="Center"/> -->
        </Grid>
    </Border>
</UserControl>
